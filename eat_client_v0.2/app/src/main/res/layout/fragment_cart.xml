<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout1"
        >


        <ProgressBar
            style="@style/categoryBar"
            android:id="@+id/progressBar1"
            android:layout_marginTop="20dp"
            android:progress="23"
            android:progressDrawable="@drawable/progressbar7"
            android:indeterminate="false"/>

        <TextView
            style="@style/categoryName"
            android:text="Diary"
            android:layout_marginTop="20dp"
            android:id="@+id/textView1"
            android:textColor="#FFFFFF"
            android:layout_alignLeft="@id/progressBar1"
            android:layout_alignBottom="@id/progressBar1"/>

        <ProgressBar
            style="@style/categoryBar2"
            android:id="@+id/progressBar11"
            android:layout_marginTop="20dp"
            android:progress="85"
            android:progressDrawable="@drawable/progressbar2"
            android:indeterminate="false"
            android:layout_toRightOf="@id/textView1"/>

        <ProgressBar
            style="@style/categoryBar"
            android:id="@+id/progressBar2"
            android:progress="23"
            android:progressDrawable="@drawable/progressbar7"
            android:indeterminate="false"
            android:layout_below="@id/progressBar1"/>

        <TextView
            style="@style/categoryName"
            android:text="Fruit"
            android:layout_marginTop="20dp"
            android:id="@+id/textView2"
            android:textColor="#FFFFFF"
            android:layout_alignLeft="@id/progressBar2"
            android:layout_alignBottom="@id/progressBar2"/>

        <ProgressBar
            style="@style/categoryBar2"
            android:id="@+id/progressBar22"
            android:progress="72"
            android:progressDrawable="@drawable/progressbar3"
            android:indeterminate="false"
            android:layout_toRightOf="@id/textView2"
            android:layout_below="@id/progressBar11"/>

        <ProgressBar
            style="@style/categoryBar"
            android:id="@+id/progressBar3"
            android:progress="23"
            android:progressDrawable="@drawable/progressbar7"
            android:indeterminate="false"
            android:layout_below="@id/progressBar2"/>

        <TextView
            style="@style/categoryName"
            android:text="Protein"
            android:layout_marginTop="20dp"
            android:id="@+id/textView3"
            android:textColor="#FFFFFF"
            android:layout_alignLeft="@id/progressBar2"
            android:layout_alignBottom="@id/progressBar3"/>

        <ProgressBar
            style="@style/categoryBar2"
            android:id="@+id/progressBar33"
            android:progress="94"
            android:progressDrawable="@drawable/progressbar4"
            android:indeterminate="false"
            android:layout_toRightOf="@id/textView3"
            android:layout_below="@id/progressBar22"/>


        <ProgressBar
            style="@style/categoryBar"
            android:id="@+id/progressBar4"
            android:progress="23"
            android:progressDrawable="@drawable/progressbar7"
            android:indeterminate="false"
            android:layout_below="@id/progressBar3"/>

        <TextView
            style="@style/categoryName"
            android:text="Grain"
            android:layout_marginTop="20dp"
            android:id="@+id/textView4"
            android:textColor="#FFFFFF"
            android:layout_alignLeft="@id/progressBar3"
            android:layout_alignBottom="@id/progressBar4"/>

        <ProgressBar
            style="@style/categoryBar2"
            android:id="@+id/progressBar44"
            android:progress="78"
            android:progressDrawable="@drawable/progressbar5"
            android:indeterminate="false"
            android:layout_toRightOf="@id/textView4"
            android:layout_below="@id/progressBar33"/>


        <ProgressBar
            style="@style/categoryBar"
            android:id="@+id/progressBar5"
            android:progress="23"
            android:progressDrawable="@drawable/progressbar7"
            android:indeterminate="false"
            android:layout_below="@id/progressBar4"/>

        <TextView
            style="@style/categoryName"
            android:text="Veggie"
            android:layout_marginTop="20dp"
            android:id="@+id/textView5"
            android:textColor="#FFFFFF"
            android:layout_alignLeft="@id/progressBar4"
            android:layout_alignBottom="@id/progressBar5"/>

        <ProgressBar
            style="@style/categoryBar2"
            android:id="@+id/progressBar55"
            android:progress="69"
            android:progressDrawable="@drawable/progressbar6"
            android:indeterminate="false"
            android:layout_toRightOf="@id/textView5"
            android:layout_below="@id/progressBar44"/>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lin1"
        android:layout_below="@id/textView5"
        >

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:id="@+id/lin2"
        android:layout_below="@id/lin1">

         TODO: Update blank fragment layout
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            >
            <Spinner
                android:id="@+id/explore_filter_type"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                ></Spinner>

        </RelativeLayout>
        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@android:id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@color/app_green"
            android:dividerHeight="1dp"
            android:layout_marginTop="40dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_below="@id/lin2">

        <Button
            android:id="@+id/takePicture_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onPictureClicked"
            android:text="@string/button_suggest" />
    </LinearLayout>

    </RelativeLayout>
    </ScrollView>