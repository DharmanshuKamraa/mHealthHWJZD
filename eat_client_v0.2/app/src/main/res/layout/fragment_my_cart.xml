<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.slidingmenu.FoodItemFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--<Spinner-->
            <!--android:id="@+id/explore_filter_type"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--/>-->
            <TextView
                android:id="@+id/txt_progress_vie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROGRESS"
                style="@style/customHeading"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/rectangle"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <LinearLayout
                android:id="@+id/progress_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout1">

                    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:backgroundPadding="4dp"
                        android:id="@+id/progress_carbs"
                        app:backgroundRadius="15dp"
                        app:backgroundColor="#996bCA"
                        app:progressColor="#8441C9"
                        app:progress="0"
                        app:max="100"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/myTextProgress"
                        android:layout_alignLeft="@id/progress_carbs"
                        android:layout_alignTop="@id/progress_carbs"
                        android:layout_alignRight="@id/progress_carbs"
                        android:layout_alignBottom="@id/progress_carbs"
                        android:background="@android:color/transparent"
                        android:text="CARBS"
                        android:fontFamily="Arial"
                        android:textColor="#fff"
                        android:gravity="center"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:backgroundPadding="4dp"
                        android:id="@+id/progress_proteins"
                        app:backgroundRadius="15dp"
                        app:backgroundColor="#F0B838"
                        app:progressColor="#E78600"
                        app:progress="0"
                        app:max="100"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/progress_proteins"
                        android:layout_alignTop="@id/progress_proteins"
                        android:layout_alignRight="@id/progress_proteins"
                        android:layout_alignBottom="@id/progress_proteins"
                        android:background="@android:color/transparent"
                        android:text="PROTEINS"
                        android:fontFamily="Arial"
                        android:textColor="#fff"
                        android:gravity="center"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                >

                    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:backgroundPadding="4dp"
                        android:id="@+id/progress_fats"
                        app:backgroundRadius="15dp"
                        app:backgroundColor="#E04843"
                        app:progressColor="#AF0900"
                        app:progress="0"
                        app:max="100"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignLeft="@id/progress_fats"
                        android:layout_alignTop="@id/progress_fats"
                        android:layout_alignRight="@id/progress_fats"
                        android:layout_alignBottom="@id/progress_fats"
                        android:background="@android:color/transparent"
                        android:text="Fats"
                        android:fontFamily="Arial"
                        android:textColor="#fff"
                        android:gravity="center"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:backgroundPadding="4dp"
                        android:id="@+id/progress_vitamins"
                        app:backgroundRadius="15dp"
                        app:backgroundColor="#ABC81E"
                        app:progressColor="#779614"
                        app:progress="0"
                        app:max="100"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignLeft="@id/progress_vitamins"
                        android:layout_alignTop="@id/progress_vitamins"
                        android:layout_alignRight="@id/progress_vitamins"
                        android:layout_alignBottom="@id/progress_vitamins"
                        android:background="@android:color/transparent"
                        android:text="GREENS"
                        android:fontFamily="Arial"
                        android:textColor="#fff"
                        android:gravity="center"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_progress_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CART ITEMS"
                style="@style/customHeading"
                android:paddingLeft="5dp"
                android:layout_marginTop="15dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/rectangle"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <it.gmariotti.cardslib.library.view.CardListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/myCardList"
                card:list_card_layout_resourceID="@layout/food_item_list_card"
            />
        </LinearLayout>
</FrameLayout>