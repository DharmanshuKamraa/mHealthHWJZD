<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="edit_text">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#57981d</item>
        <item name="android:background">@drawable/edittext_bottom_line</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <!--<item name="android:textSize">20dp</item>-->
    </style>

    <style name="edit_text_border" parent="edit_text">
        <item name="android:background">@drawable/edittext_bottom_line</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>>

    <style name="customButton" >
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#57981d</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="categoryName">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="categoryBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:max">100</item>
        <item name="android:indeterminate">false</item>
    </style>

    <style name="categoryBar2" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:max">100</item>
        <item name="android:indeterminate">false</item>
    </style>
















</resources>
