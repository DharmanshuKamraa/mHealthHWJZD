<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/account">

        <PreferenceScreen
            android:title="@string/title_user_profile"
            android:summary="@string/summary_user_profile">

            <intent
                android:action="android.intent.action.VIEW"
                android:targetPackage="edu.dartmouth.zhenma.myruns2"
                android:targetClass="edu.dartmouth.zhenma.myruns2.ProfileActivity"
                />
        </PreferenceScreen>

        <CheckBoxPreference
            android:key="checkbox_preference"
            android:title="@string/privacy_setting"
            android:summary="@string/summary_privacy_setting" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/personalize">

        <ListPreference
            android:key="list_preference"
            android:title="@string/title_unit_preference"
            android:summary="@string/summary_unit_preference"
            android:entries="@array/entries_unit_preference"
            android:entryValues="@array/entryvalues_unit_preference"
            android:defaultValue="Miles"
            android:dialogTitle="@string/dialog_title_unit_preference" />

        <EditTextPreference
            android:key="edittext_preference"
            android:title="@string/title_comment"
            android:summary="@string/summary_comment"
            android:dialogTitle="@string/dialog_title_comment" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/goals">
        <PreferenceScreen
            android:title="@string/title_class_homepage"
            android:summary="@string/summary_class_homepage">

            <intent android:action="android.intent.action.VIEW"
                android:data="http://www.cs.dartmouth.edu/~campbell/" />
        </PreferenceScreen>

    </PreferenceCategory>
</PreferenceScreen>